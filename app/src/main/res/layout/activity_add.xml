<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:keepScreenOn="false"
    android:padding="30dp"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/name_input"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:background="#D3D2D2"
        android:hint="Movie"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/type_input"
        android:layout_width="262dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#D3D2D2"
        android:ems="10"
        android:hint="Movie Genres"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input" />

    <EditText
        android:id="@+id/runtime_input"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginTop="284dp"
        android:background="#D3D2D2"
        android:ems="10"
        android:hint="Running time (minutes)"
        android:inputType="number"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/RG_Movie"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/RG_Movie"
        app:layout_constraintTop_toBottomOf="@+id/type_input" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_button_pressed"
        android:text="Add"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/plot_input"
        app:layout_constraintStart_toStartOf="@+id/plot_input"
        app:layout_constraintTop_toBottomOf="@+id/plot_input" />

    <RadioGroup
        android:id="@+id/RG_Movie"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/runtime_input"
        app:layout_constraintEnd_toEndOf="@+id/name_input"
        app:layout_constraintStart_toStartOf="@+id/name_input"
        app:layout_constraintTop_toBottomOf="@+id/name_input">

        <RadioButton
            android:id="@+id/radioButton_adventure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:shadowColor="#007A3131"
            android:text="adventure"
            android:textColor="#FF9800"
            android:textColorHint="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_comedy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:text="comedy"
            android:textColor="#FF9800"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_drama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:text="drama"
            android:textColor="#FF9800"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_erotica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:text="erotica"
            android:textColor="#FF9800"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_fantasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:text="fantasy"
            android:textColor="#FF9800"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_horror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:text="horror"
            android:textColor="#FF9800"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_sci_fi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:text="sci_fi"
            android:textColor="#FF9800"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_western"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:text="western"
            android:textColor="#FF9800"
            android:textSize="18sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/plot_input"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#D3D2D2"
        android:ems="10"
        android:hint="Plot"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/runtime_input"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/runtime_input"
        app:layout_constraintTop_toBottomOf="@+id/runtime_input" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:text="Movie Genres"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/name_input"
        app:layout_constraintTop_toBottomOf="@+id/name_input" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_button_disabled"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/add_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_button"
        app:layout_constraintTop_toBottomOf="@+id/add_button" />

</androidx.constraintlayout.widget.ConstraintLayout>